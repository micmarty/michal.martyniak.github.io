<!-- Additional Skills -->
<aside class="skills aside section">
    <div class="section-inner">
        <h2 class="heading">Additional Skills</h2>
        <div class="content">
            <p class="intro"><%= data.aside_sections.skills.additional_intro %></p>

            <div class="skillset">
                <% data.aside_sections.skills.additional.each do |skill| %>
                <div class="item">
                    <h3 class="level-title"><%= skill.name %><span class="level-label" data-toggle="tooltip" data-placement="left" data-animation="true" title="Someone above Senior">Highly Advanced</span></h3>
                    <div class="level-bar">
                        <span class="level-label" data-toggle="tooltip" data-placement="left" data-animation="true" title="<%= skill&.tooltip%>">
                        <div class="level-bar-inner" data-level="<%= skill.value %>"></div>
                        </span>
                    </div><!--//level-bar-->
                    <p><%= skill&.description %></p>
                </div><!--//item-->
                <% end %>
                <p><a class="more-link" href="#"><i class="fa fa-external-link"></i> More on Coderwall</a></p>
            </div>
        </div><!--//content-->
    </div><!--//section-inner-->
</aside><!--//section-->